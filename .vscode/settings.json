{
    "editor.minimap.enabled": false,
    "typescript.preferences.autoImportFileExcludePatterns": [
        "@remix-run/server-runtime",
        "@remix-run/router",
        "express",
        "@radix-ui/**",
        "@react-email/**",
        "react-router-dom",
        "react-router",
        "stream/consumers",
        "node:stream/consumers",
        "node:test",
        "console",
        "node:console"
    ],
    "workbench.editorAssociations": {
        "*.db": "sqlite-viewer.view"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
    },
    "github.gitProtocol": "ssh",
    "emeraldwalk.runonsave": {
        "commands": [
            // api: run linting after changing any .py file
            {
                "match": "\/api\/.*\\.py$",
                "cmd": "cd ${workspaceFolder}/api; ./scripts/lint.sh"
            }
        ]
    },
}